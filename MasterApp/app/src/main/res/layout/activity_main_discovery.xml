<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View style="@style/common_flock_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linear_friend_quan"
                style="@style/common_item_style"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/iv_newfriend_headImg"
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_friend_quan" />

                <TextView
                    android:id="@+id/about_friends"
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/common_item_style"
                android:layout_weight="1"
                android:gravity="center_vertical|end">

                <ImageView
                    android:id="@+id/iv_newfriend_headImg1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/meimei01" />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/common_flock_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_scan"
                style="@style/common_item_style">

                <ImageView
                    android:id="@+id/iv_scan"
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_scan" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="扫一扫"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/common_LRblank_split_line" />

            <LinearLayout
                android:id="@+id/linear_small_world"
                style="@style/common_item_style">

                <ImageView
                    android:id="@+id/iv_small_world"
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_small_world" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小程序"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


        <View style="@style/common_flock_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_goshopping"
                style="@style/common_item_style">

                <ImageView
                    android:id="@+id/iv_goshopping"
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_shopping" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购    物"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/common_LRblank_split_line" />

            <LinearLayout
                android:id="@+id/linear_game"
                style="@style/common_item_style">

                <ImageView
                    android:id="@+id/iv_game"
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_game" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游    戏"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/common_flock_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/linear_market"
                style="@style/common_item_style">

                <ImageView
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_see" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看一看"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/common_LRblank_split_line" />

            <LinearLayout
                android:id="@+id/linear_tele_charge"
                style="@style/common_item_style">

                <ImageView
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_search" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="搜一搜"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/common_flock_split_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_shake"
                style="@style/common_item_style">

                <ImageView
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_shake" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摇一摇"
                    android:textSize="15sp" />
            </LinearLayout>

            <View style="@style/common_LRblank_split_line" />

            <LinearLayout
                android:id="@+id/linear_nearby"
                style="@style/common_item_style">

                <ImageView
                    style="@style/common_label_image_style"
                    android:background="@mipmap/ic_nearby" />

                <TextView
                    style="@style/ContactsFragment_item_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近的"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
