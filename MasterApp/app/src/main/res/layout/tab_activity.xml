<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tab_main_01"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页view布局"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/tab_main_02"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页Activity"
            android:textColor="@color/baise_white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tab_main_03"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/tab_main_04"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页"
            android:textColor="@color/baise_white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tab_main_05"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页"
            android:textColor="@color/baise_white" />

        <TextView
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:layerType="software" />

        <Button
            android:id="@+id/tab_main_06"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_ispress_common"
            android:onClick="onClick"
            android:text="分页"
            android:textColor="@color/baise_white" />
    </LinearLayout>
</LinearLayout>
