<?xml version="1.0" encoding="utf-8"?>
<com.watom.draggridviewlib.widget.LinearBox
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/out_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9983CC39"
    android:clipChildren="false"
    android:orientation="vertical">

    <com.watom.draggridviewlib.DragGridView
        android:id="@+id/grid_tips"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@android:color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:paddingRight="10dp"
        android:paddingBottom="30dp"
        android:scrollbars="vertical"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_enable_selector"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_drag_gridview"
            android:gravity="center"
            android:text="selector已关闭" />

        <TextView
            android:id="@+id/text_change_mode"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_drag_gridview"
            android:gravity="center" />

        <TextView
            android:id="@+id/text_add_tag"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_drag_gridview"
            android:gravity="center"
            android:text="添加标签" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_recovery_tag"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/selector_drag_gridview"
            android:gravity="center"
            android:text="复原" />
    </LinearLayout>


</com.watom.draggridviewlib.widget.LinearBox>
