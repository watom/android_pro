<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--自定义光标颜色-->
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowAnimationStyle">@style/Activity_Animation</item>-->
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 左边的箭头指示-->
    <style name="left_Drawer_Arrow_Style" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/yellow</item>
    </style>

    <!--设置Toolbar的TitleText字体大小和颜色-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="actionMenuTextColor">@color/yellow</item>
    </style>
    <!--设置Toolbar的SubtitleText字体大小和颜色-->
    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="actionMenuTextColor">@color/yellow</item>
    </style>
    <!--设置Toolbar的图标大小-->
    <style name="Toolbar.NavigationButtonStyle" parent="@style/Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="Activity_Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
    </style>

    <!--表格中的分割线-->
    <style name="list_item_seperator_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/excel_color</item>
    </style>

    <!-- 一般通用1px的分割线 -->
    <style name="split_1_px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px1</item>
        <item name="android:background">@color/huise</item>
    </style>

    <style name="split_3_px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/px3</item>
        <item name="android:background">@color/huise</item>
    </style>

    <style name="list_item_cell_seperator_layout">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/excel_color</item>
    </style>

    <style name="excel_textview_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="popupwindowAnimation">
        <item name="android:windowEnterAnimation">@anim/window_out</item>
        <item name="android:windowExitAnimation">@anim/window_back</item>
    </style>

    <!-- 跑马灯效果：TextView单行文字滚动 -->
    <style name="marquee_textview">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="mDialog_background" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="mWidgetProgressBar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:minWidth">90dip</item>
        <item name="android:maxWidth">90dip</item>
        <item name="android:minHeight">90dip</item>
        <item name="android:maxHeight">90dip</item>
    </style>

    <style name="Dialog_BackgroundTransparent" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Button_Sample">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_ispress_common</item>
        <item name="android:onClick">onClick</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--"我的、发现"通用一组标签之间的空白样式-->
    <style name="common_flock_split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18.5dp</item>
        <item name="android:background">#EBEBEB</item>
    </style>

    <!--"我的、发现"通用列表Item样式-->
    <style name="common_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--通用标签图片样式-->
    <style name="common_label_image_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginRight">13dp</item>
    </style>

    <!--ContactsFragment-->
    <style name="ContactsFragment_item_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#353535</item>
    </style>

    <style name="common_LRblank_split_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:background">#EBEBEB</item>
    </style>

    <style name="ratingBar22" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_list_ratingbar</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:maxHeight">24dp</item>
    </style>
</resources>
